        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:layout_centerInParent="true">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_test_no_entradas"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:background="@drawable/borde_circular_test"
            android:scaleType="centerCrop"
            android:focusable="true"
            android:clickable="true"
            android:src="@mipmap/ic_launcher_interrogacion"/>

        <TextView
            android:id="@+id/click_no_entradas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/margen1"
            android:textColor="@color/colorIconos"
