<resources>

    <!--Tema app-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--Para la activitiy "activity_seleccion" buscador y check en blancos-->
    <style name="TemaActivities" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <!--Tema para la pantalla de bienvenida-->
    <style name="SplashTema" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_inicio</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--Tema para el buscador-->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- icono del SearchView-->
        <item name="searchIcon">@android:drawable/ic_menu_search</item>
        <!-- linea buscador -->
        <item name="queryBackground">@color/colorIconos</item>
        <!-- Elimina el icono de bÃºsqueda cuando se expande el cuadro de texto-->
        <item name="searchHintIcon">@null</item>
        <!-- Marca de agua del buscador -->
        <item name="queryHint">@string/marcaBuscar</item>
    </style>

    <!--Tema Para Barra opciones-->
    <style name="barraOpciones" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--Tema para los AlertDialog-->
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Para botones -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Titulo y texto -->
        <item name="android:textColorPrimary">@color/grisOscuro</item>
        <!-- Color fondo -->
        <item name="android:background">@color/azulCielo</item>
    </style>

</resources>
